{
  "compilerOptions": {
    // File Layout
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    // Alias
    "paths": {
      "@/*": ["src/*"],
      "@hooks/*": ["src/hooks/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "exclude": ["dist", "node_modules", "**/*.config.*", "eslint.config.ts"],

  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
